{% extends "layouts/base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="row justify-content-center align-items-center" style="height: 100%">
  <div class="col-xs-12 col-lg-5 col-md-6">

    {% if response == 'tokenInvalid' %}
      {% include "components/errors.twig" %}
    {% endif %}

    {% if response == 'tokenValid' %}
    <div class="card">

      <h5 class="card-header info-color white-text text-center py-4">
        <strong>Reset your Pass</strong>
      </h5>

      <div class="card-body px-lg-5 pt-0">

        <form class="text-center" style="color: #757575;" method="POST" action="{{ path_for('resetpass.exec', { 'token': token}) }}">

          {% if error_message %}
            {% include "components/errors.twig" %}
          {% endif %}

          <div class="md-form">
            <input type="password" id="pass" class="form-control" name="pass" required>
            <label for="pass">Your new password</label>
          </div>

          <div class="md-form">
            <input type="password" id="newPass" class="form-control" name="newPass" required>
            <label for="newPass">Confirm your new password</label>
          </div>

          {{ csrf_field() | raw }}

          <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Reset password</button>

        </form>
      </div>
    </div>
    {% endif %}

  </div>
</div>

{% endblock %}