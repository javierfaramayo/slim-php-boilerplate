{% extends "layouts/base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="row justify-content-center align-items-center" style="height: 100%">
  <div class="col-xs-12 col-lg-5 col-md-6">

    <div class="card">

      <h5 class="card-header info-color white-text text-center py-4">
        <strong>Sign up</strong>
      </h5>

      <div class="card-body px-lg-5 pt-0">

        <form class="text-center" style="color: #757575;" method="POST" action="{{ path_for('signup.store') }}">

          {% if error_message %}
            {% include "components/errors.twig" %}
          {% endif %}

          <div class="md-form">
            <input type="text" id="name" class="form-control" name="name" autocomplete="off" value="{% if error_message %}{{ old_fields.name }}{% endif %}" required>
            <label for="name">Name</label>
          </div>

          <div class="md-form">
            <input type="text" id="lastName" class="form-control" name="lastName" autocomplete="off" value="{% if error_message %}{{ old_fields.lastName }}{% endif %}" required>
            <label for="lastName">LastName</label>
          </div>

          <div class="md-form">
            <input type="email" id="email" class="form-control" name="email" autocomplete="off" value="{% if error_message %}{{ old_fields.email }}{% endif %}" required>
            <label for="email">E-mail</label>
          </div>

          <div class="md-form">
            <input type="password" id="pass" class="form-control" name="pass" autocomplete="off" required>
            <label for="pass">Password</label>
          </div>

          <div class="md-form">
            <input type="password" id="confirmPass" class="form-control" name="confirmPass" autocomplete="off" required>
            <label for="confirmPass">Confirm your password</label>
          </div>

          {{ csrf_field() | raw }}

          <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign
            up</button>

          <p>Do you have an account?
            <a href="{{ path_for('signin.show') }}">Sign In</a>
          </p>

        </form>
      </div>
    </div>

  </div>
</div>

{% endblock %}