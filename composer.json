{
    "name": "Slim PHP Boilerplate",
    "description": "A little boilerplate created with Slim Framework to PHP with some additions to start a project very easy and fast",
    "version": "1.0.0-dev",
    "type": "project",
    "keywords": ["slim", "php", "boilerplate", "starter", "kit", "project"],
    "readme": "./readme.md",
    "authors": [
        {
            "name": "Javier Aramayo",
            "email": "javierf.aramayo@gmail.com",
            "role": "Web Developer"
        }
    ],
    "support": {
        "email": "javierf.aramayo@gmail.com"
    },
    "license": "MIT",
    "require": {
        "slim/slim": "3.0",
        "slim/twig-view": "^2.4",
        "vlucas/phpdotenv": "^3.3",
        "monolog/monolog": "^1.24",
        "firebase/php-jwt": "^5.0",
        "slim/csrf": "^0.8.3",
        "fzaninotto/faker": "^1.8",
        "phpmailer/phpmailer": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/controllers/",
            "App\\Models\\": "app/models/",
            "App\\Middlewares\\": "app/middlewares/",
            "App\\Utils\\": "app/utils/",
            "App\\Views\\": "app/views/"
        }
    }
}
